{
	"name": "express_v5_typescript_boilerplate",
	"version": "1.0.0",
	"description": "Express V5 Boilerplate With TypeScript",
	"scripts": {
		"dev": "tsx watch --clear-screen=false src/index.ts",
		"clean": "rimraf dist",
		"build": "npm run clean && swc src -d dist",
		"start": "node dist/src/index.js",
		"lint": "biome check src/",
		"lint:fix": "biome check src/ --fix",
		"format": "biome format src/ --fix",
		"lint:lint-staged": "lint-staged",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prepare": "husky"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "^7.3.0",
		"@scalar/express-api-reference": "^0.4.175",
		"compression": "^1.7.5",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"envalid": "^8.0.0",
		"express": "^5.0.1",
		"express-rate-limit": "^7.5.0",
		"helmet": "^8.0.0",
		"http-status-codes": "^2.3.0",
		"lint-staged": "^15.4.1",
		"mongoose": "^8.9.5",
		"morgan": "^1.10.0",
		"ms": "^2.1.3",
		"telegraf": "^4.16.3",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
