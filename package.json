		"@types/morgan": "^1.9.9",
		"husky": "^9.1.7",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"rimraf": "^6.0.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vitest": "^3.0.2"
	},
