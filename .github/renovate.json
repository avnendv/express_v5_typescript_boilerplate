{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"dependencyDashboard": true,
	"lockFileMaintenance": {
		"enabled": true
	},
	"packageRules": [
		{
			"groupName": "all-dependencies",
			"automerge": false,
			"matchPackageNames": [
				"*"
			]
		},
		{
			"matchDepTypes": [
				"devDependencies"
			],
			"groupName": "dev-dependencies",
			"automerge": false
		}
	]
}
